<div class="card">
  <div class="card-header card-header-success">
    <h4 class="card-title">
      <%= User.human_title(:invite) %>
      <% if policy(User).index? %>
      <%= link_to_back admin_users_path%>
      <% end %>
    </h4>
  </div>
  <div class="card-body">
    <%= simple_form_for(@user, url: invitation_path(@user), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <% @user.class.invite_key_fields.each do |field| -%>
    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <%= f.input field, input_html: { class: "form-control" } %>
        </div>
      </div>
    </div>
    <% end -%>

    <div class="form-actions">
      <%= f.button :submit, t("devise.invitations.new.submit_button"), class:"btn btn-primary pull-right" %>
    </div>
    <% end %>
  </div>
</div>
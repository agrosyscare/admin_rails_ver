<div class="card">
  <div class="card-header card-header-tabs card-header-success">
    <div class="nav-tabs-navigation">
      <div class="nav-tabs-wrapper">
        <span class="nav-tabs-title"><%= Greenhouse.human_title(:show) %></span>
        <ul class="nav nav-tabs mr-auto" data-tabs="tabs">
          <li class="nav-item">
            <a class="nav-link active" href="#details" data-toggle="tab">
              <i class="material-icons">info</i> Detalles
              <div class="ripple-container"></div>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#audits" data-toggle="tab">
              <i class="material-icons">rule_folder</i> Log
              <div class="ripple-container"></div>
            </a>
          </li>
          <li class="nav-item ml-auto">
            <%= link_to_back admin_greenhouses_path %>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="card-body">
    <div class="tab-content">
      <div class="tab-pane active" id="details">
        <div class="form-group">
          <div class="row">
            <div class="col-3 font-weight-bold">
              <%= Greenhouse.human_attribute_name(:name)%>
            </div>
            <div class="col-9">
              <%= @greenhouse.name %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-3 font-weight-bold">
              <%= Greenhouse.human_attribute_name(:description)%>
            </div>
            <div class="col-9">
              <%= @greenhouse.description %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-3 font-weight-bold">
              <%= Greenhouse.human_attribute_name(:created_at)%>
            </div>
            <div class="col-9">
              <%= l(@greenhouse.created_at, format: :long) %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-3 font-weight-bold">
              <%= Greenhouse.human_attribute_name(:updated_at)%>
            </div>
            <div class="col-9">
              <%= l(@greenhouse.updated_at, format: :long) %>
            </div>
          </div>
        </div>
      </div>
      <div class="tab-pane" id="audits">
        <%= render "admin/greenhouses/audits", greenhouse: @greenhouse %>
      </div>
    </div>
  </div>
</div>
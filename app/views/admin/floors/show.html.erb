<div class="card">
  <div class="card-header card-header-tabs card-header-success">
    <div class="nav-tabs-navigation">
      <div class="nav-tabs-wrapper">
        <span class="nav-tabs-title"><%= Floor.human_title(:show) %></span>
        <ul class="nav nav-tabs mr-auto" data-tabs="tabs">
          <li class="nav-item">
            <a class="nav-link active" href="#details" data-toggle="tab">
              <i class="material-icons">info</i> Detalles
              <div class="ripple-container"></div>
            </a>
          </li>
          <% if current_user.super_admin? || current_user.is_manager? %>
          <li class="nav-item">
            <a class="nav-link" href="#audits" data-toggle="tab">
              <i class="material-icons">rule_folder</i> Log
              <div class="ripple-container"></div>
            </a>
          </li>
          <% end %>
          <% if policy(Floor).index? %>
          <li class="nav-item ml-auto">
            <%= link_to_back admin_floors_path %>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <div class="card-body">
    <div class="tab-content">
      <div class="tab-pane active" id="details">
        <div class="form-group">
          <div class="row">
            <div class="col-3 font-weight-bold">
              <%= Floor.human_attribute_name(:name)%>
            </div>
            <div class="col-9">
              <%= @floor.name %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-3 font-weight-bold">
              <%= Floor.human_attribute_name(:plant_type)%>
            </div>
            <div class="col-9">
              <%= @floor.plant_type %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-3 font-weight-bold">
              <%= Floor.human_attribute_name(:greenhouse)%>
            </div>
            <div class="col-9">
              <%= @floor.greenhouse.name %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-3 font-weight-bold">
              <%= Floor.human_attribute_name(:created_at)%>
            </div>
            <div class="col-9">
              <%= l(@floor.created_at, format: :long) %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-3 font-weight-bold">
              <%= Floor.human_attribute_name(:updated_at)%>
            </div>
            <div class="col-9">
              <%= l(@floor.updated_at, format: :long) %>
            </div>
          </div>
        </div>
      </div>
      <div class="tab-pane" id="audits">
        <%= render "admin/floors/audits", floor: @floor %>
      </div>
    </div>
  </div>
</div>
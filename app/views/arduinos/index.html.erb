<div class="card">
  <div class="card-header card-header-success">
    <h4 class="card-title ">
      Dispositivos IoT
      <%= link_to_new new_arduino_path %>
    </h4>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover" id="arduinos-dttb" data-source="<%= datatable_arduinos_path(format: :json) %>">
        <thead>
          <tr>
            <th data-data='id'>ID</th>
            <th data-data='model'>Name</th>
            <th data-data='serial'>Plant Type</th>
            <th data-data='buttons' data-orderable="false" data-class-name="all" data-searchable="false" class="skip-export"></th>
          </tr>
        </thead>
        <tbody>
        </tbody>
      </table>
    </div>
  </div>
</div>
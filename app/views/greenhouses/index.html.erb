<div class="card">
  <div class="card-header card-header-success">
    <h4 class="card-title ">
      <%= Greenhouse.human_title(:index) %>
      <%= link_to_new new_greenhouse_path %>
    </h4>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover" id="greenhouses-dttb" data-source="<%= datatable_greenhouses_path(format: :json) %>">
        <thead>
          <tr>
            <th data-data='id'><%= Greenhouse.human_attribute_name(:id) %></th>
            <th data-data='name'><%= Greenhouse.human_attribute_name(:name) %></th>
            <th data-data='description'><%= Greenhouse.human_attribute_name(:description) %></th>
            <th data-data='buttons' data-orderable="false" data-searchable="false"></th>
          </tr>
        </thead>
        <tbody>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%= simple_form_for @greenhouse do |f| %>
<div class="row">
  <div class="col-md-12">
    <div class="form-group">
      <%= f.input :name, input_html: { class: "form-control" } %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="form-group">
      <%= f.input :description, input_html: { class: "form-control" } %>
    </div>
  </div>
</div>
<%= f.button :submit, class:"btn btn-primary pull-right" %>
<% end %>
<main class="d-flex align-items-center min-vh-100 py-3 py-md-0">
  <div class="container">
    <div class="card login-card">
      <div class="row no-gutters">
        <div class="col-md-5">
          <%
=begin%>
 <img src="assets/images/login.jpg" alt="login" class="login-card-img"> 
<%
=end%>
        </div>
        <div class="col-md-7">
          <div class="card-body">
            <div class="brand-wrapper">
              <%
=begin%>
 <img src="assets/images/logo.svg" alt="logo" class="logo"> 
<%
=end%>
            </div>
            <p class="login-card-description">Sign into your account</p>

            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <div class="form-group">
                <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email", class: "form-control", placeholder:"Correo electrónico" } %>
              </div>
              <div class="form-group mb-4">
                <%= f.input :password, required: false, input_html: { autocomplete: "current-password", class:"form-control", placeholder: "Contraseña" } %>
              </div>
              <div class="form-group">
                <%= f.input :remember_me, input_html: { class:"m-1" }, as: :boolean if devise_mapping.rememberable?  %>
              </div>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Log in", class:"btn btn-block btn-success login-btn mb-4" %>
            </div>
            <% end %>
            <nav class="login-card-footer-nav">
              <%= render "devise/shared/links" %>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>



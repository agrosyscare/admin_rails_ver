<main class="d-flex align-items-center min-vh-100 py-3 py-md-0">
  <div class="container">
    <div class="card login-card">
      <div class="row no-gutters">
        <div class="col-md-5">
          <%= image_pack_tag 'login/login.jpeg' , class: "login-card-img", alt:"login" %>
        </div>
        <div class="col-md-7">
          <div class="card-body login-form">
            <div class="brand-wrapper">
            <%= image_pack_tag 'login/brand.png' , class: "logo-img", alt:"logo" %>
            </div>
            <p class="login-card-description"><%= t(:sign_in, scope: [:views, :texts])%></p>

            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <div class="form-group">
                <%= f.input :email, label: false, required: false, autofocus: true, input_html: { autocomplete: "email", class: "form-control", placeholder:"Correo electrónico" } %>
              </div>
              <div class="form-group mb-4">
                <%= f.input :password, label: false, required: false, input_html: { autocomplete: "current-password", class:"form-control", placeholder: "Contraseña" } %>
              </div>
              <div class="form-group">
                <%= f.input :remember_me, input_html: { class:"m-1" }, as: :boolean if devise_mapping.rememberable?  %>
              </div>
            </div>

            <div class="form-actions">
              <%= f.button :submit, t(:sign_in, scope: [:views, :buttons]), class:"btn btn-block btn-success login-btn mb-4" %>
            </div>
            <% end %>
            <nav class="login-card-footer-nav">
              <%#= render "devise/shared/links" %>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

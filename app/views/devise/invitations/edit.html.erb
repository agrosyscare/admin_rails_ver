<div class="card">
  <div class="card-header card-header-success">
    <h4 class="card-title">
      Configurar nuevo usuario
    </h4>
  </div>
  <div class="card-body">
    <%= simple_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>
    <%= f.hidden_field :invitation_token %>

    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <%= f.input :rut, input_html: { class: "form-control" }, wrapper_html: { class: 'rut' } %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.input :firstname, input_html: { class: "form-control" } %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= f.input :middlename, input_html: { class: "form-control" } %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.input :lastname, input_html: { class: "form-control" } %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= f.input :mothername, input_html: { class: "form-control" } %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <%= f.input :phone, input_html: { class: "form-control" }, wrapper_html: { class: 'phone' } %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <%= f.input :email, input_html: { class: "form-control" } %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <%= f.input :password, input_html: { class: "form-control" } %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <%= f.input :password_confirmation, input_html: { class: "form-control" } %>
        </div>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, t("devise.invitations.edit.submit_button") %>
    </div>
    <% end %>
  </div>
</div>
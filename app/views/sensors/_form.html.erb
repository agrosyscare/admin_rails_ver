<%= simple_form_for @sensor do |f| %>
<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <%= f.input :model, input_html: { class: "form-control" } %>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group">
      <%= f.input :serial, input_html: { class: "form-control" } %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="form-group">
      <%= f.association :environmental_condition, include_blank: false, input_html: { class: "selectpicker form-control" } %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="form-group">
      <%= f.association :arduino, label_method: :model, value_method: :id, include_blank: false, input_html: { class: "selectpicker form-control" } %>
    </div>
  </div>
</div>
  <%= f.button :submit, class:"btn btn-primary pull-right" %>
<% end %>

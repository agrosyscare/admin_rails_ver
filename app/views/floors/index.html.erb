<p id="notice"><%= notice %></p>

<h1>Floors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Plant type</th>
      <th>Greenhouse</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @floors.each do |floor| %>
      <tr>
        <td><%= floor.id %></td>
        <td><%= floor.name %></td>
        <td><%= floor.plant_type %></td>
        <td><%= floor.greenhouse_id %></td>
        <td><%= link_to 'Show', floor %></td>
        <td><%= link_to 'Edit', edit_floor_path(floor) %></td>
        <td><%= link_to 'Settings', edit_environmental_setting_path(floor) %></td>
        <td><%= link_to 'Destroy', floor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

